<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.layout.GridPane?>
<GridPane fx:controller="com.example.java_2_javafx_lesson_4.HelloController" xmlns:fx="http://javafx.com/fxml"
          alignment="center" hgap="10" vgap="10">
    <TextArea fx:id="textArea" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="500"/>
    <TextField fx:id="textField" promptText="Input text" GridPane.rowIndex="1" GridPane.columnIndex="0" onAction="#clickButtonSendText"/>
    <Button text="Send text" GridPane.rowIndex="1" GridPane.columnIndex="1" onAction="#clickButtonSendText"/>
</GridPane>


